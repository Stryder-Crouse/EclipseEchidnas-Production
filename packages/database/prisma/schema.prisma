// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

model Node {
  nodeID     String @id @db.VarChar(256)
  floor      String @db.VarChar(256)
  building   String @db.VarChar(256)
  nodeType   String @db.VarChar(256)
  longName   String @db.VarChar(256)
  shortName  String @db.VarChar(256)
  xcoord     Int
  ycoord     Int
  startEdges Edge[] @relation("startingEdges")
  endEdges   Edge[] @relation("endingEdges")
}

model Edge {
  edgeID      String @id @db.VarChar(256)
  startNode   Node   @relation("startingEdges", fields: [startNodeID], references: [nodeID])
  startNodeID String @db.VarChar(256)
  endNode     Node   @relation("endingEdges", fields: [endNodeID], references: [nodeID])
  endNodeID   String @db.VarChar(256)
}
